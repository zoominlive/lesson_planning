# Production Database Configuration
# Copy this to .env.production and fill in your production database URL

# Production PostgreSQL Database URL (Neon or other provider)
PRODUCTION_DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# AWS S3 Configuration (should match development if using same bucket)
AWS_ACCESS_KEY_ID=your-production-access-key
AWS_SECRET_ACCESS_KEY=your-production-secret-key
AWS_REGION=ca-central-1
S3_BUCKET_NAME=duploservices-dev-activities-748544146453

# API Keys (use production keys)
OPENAI_API_KEY=your-production-openai-key
PERPLEXITY_API_KEY=your-production-perplexity-key
ANTHROPIC_API_KEY=your-production-anthropic-key

# JWT Configuration (must match production app)
JWT_SECRET=your-production-jwt-secret